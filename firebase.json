{
  "hosting": {
    "public": "frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "endpoints": {
      "api": {
        "region": "us-central1",
        "ingress": "ALLOW_ALL",
        "timeoutSeconds": 60,
        "maxInstances": 3,
        "minInstances": 0,
        "concurrency": 80,
        "labels": {
          "env": "production"
        },
        "httpsTrigger": {}
      }
    }
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5002
    },
    "ui": {
      "enabled": true,
      "port": 8888
    },
    "singleProjectMode": true
  }
}
